#!/usr/bin/env node

var
	genart = require('../lib/genart'),
	fs = require('fs'),
	vm = require('vm'),
	path = require('path'),
	parser = require('../css'),
	canvas,
	argv;

argv = require('optimist')
	.options({
		o: {
			alias: 'out',
			demand: true,
			describe: 'Save the png output here.'
		},
		s: {
			alias: 'script',
			demand: true,
			describe: 'File to use to generate art.'
		},
		h: {
			alias: 'help',
			describe: 'Show this help message.'
		}
	})
	.argv;

main();

function main () {

	fs.readFile(argv.script, function(err, file) {

		if (err) {
			throw err;
		}

		var sandbox = {
			canvas: genart(require('paper'), {
				width: 600,
				height: 400
			})
		};

		if (path.extname(argv.script) == '.css') {

		}

		vm.runInNewContext(file, sandbox, argv.script);

		fs.writeFile(argv.out, sandbox.canvas.buffer());

	});

}

function() {
	
}